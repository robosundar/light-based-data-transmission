const int ledPin = 9;
char data[] = "HELLO";

void setup() {
  pinMode(ledPin, OUTPUT);
}

void loop() {
  for (int i = 0; data[i] != '\0'; i++) {
    sendChar(data[i]);
    delay(1000);
  }
  delay(3000);
}

void sendChar(char ch) {
  for (int i = 0; i < 8; i++) {
    digitalWrite(ledPin, bitRead(ch, i));
    delay(200);
  }
  digitalWrite(ledPin, LOW);
}
